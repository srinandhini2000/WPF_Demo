<Window x:Class="WPF_Demo.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo"
        mc:Ignorable="d"
        Title="LoginWindow" Height="350" Width="350" Background="Bisque">
    <StackPanel Margin="20,28,20,12">
        <Label Content="Login" Foreground="Black" FontSize="30" HorizontalAlignment="Center"></Label>
        <Separator></Separator>
        <Label Content="Email" Foreground="Black"/>
        <TextBox Name="Email" Width="350" Foreground="Red" Background="AntiqueWhite" FontSize="20"/>
        <Label Content="Password" Foreground="Black"/>
        <TextBox Name="t2" Width="350" Foreground="Red" Background="AntiqueWhite" FontSize="20"/>
        <Button x:Name="txtbutton" Click="txtbutton_Click" Content="Submit" Foreground="Black" FontSize="15" Background="FloralWhite" Margin="90 10" >
        </Button>
       


        <TextBox Height="23" HorizontalAlignment="Left" Name ="errormessage" VerticalAlignment="Top" Width="247" Margin="118,253,0,0"  OpacityMask="Crimson" Foreground="#FFE5572C"  />
    </StackPanel>
</Window>
